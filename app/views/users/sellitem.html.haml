- breadcrumb :sellitem
= render "layouts/breadcrumbs"

.mypage
  =render partial: 'users/side-bar'
  .BookmarkWrapper
    .Title
      出品中一覧
    .BookmarkItems
      - @items.each do |item|
        -if item.buyer_id == nil
          .BookmarkItem
            .Image
              - image = Image.find_by(item_id: item.id)
              = image_tag "#{image.url.url}" , alt: '商品画像',class:"Bookmark__image"
            .Info
              .Contents
                .Name
                  = item.name
                .Price
                  = "¥#{item.price}"
              .Allow
                = link_to item_path(item.id), class:"GuideLink" do
